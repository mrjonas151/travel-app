datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Trip {
  id              String   @id @default(uuid())  
  destination     String   
  start_date      DateTime 
  travel_time     String   
  total_value     Float    
  tour_type       String  
  reviews         Int      
  user            User     @relation(fields: [userId], references: [id])
  userId          String 
  date_of_include DateTime?      @default(now())
  updated_at      DateTime?      @default(now())

  @@map("Trips")
}

model User {
  id              String         @id
  email           String         @unique
  name            String?
  last_name       String?
  trips           Trip[]
  date_of_include DateTime?      @default(now())
  updated_at      DateTime?      @updatedAt

  @@map("Users")
}

model PopularTours {
  id              String   @id @default(uuid())  
  url_image       String
  city            String
  country         String
  title           String
  stars           Float
  reviews         Int
  days            Int
  price           Float
  date_of_include DateTime @default(now())
  updated_at      DateTime @updatedAt

  @@map("PopularTours")
}

model TravelGuide{
  id          String   @id @default(uuid())
  url_image   String
  month       String
  day         String
  year        String
  title       String

  @@map("TravelGuide")
}

model Category{
  id              String @id @default(uuid())
  title           String
  tour_quantity   Int
  price           Float 

  @@map("Category")
}

model Testimonials{
  id              String @id @default(uuid())
  url_image1      String 
  url_image2      String 
  url_image3      String 
  comment         String 
  name            String
  profession      String

  @@map("Testimonials")
}